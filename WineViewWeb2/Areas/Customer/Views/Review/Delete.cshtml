@model Review

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Review</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Text"></label>
            <input asp-for="Text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Sweetness"></label>
            <input asp-for="Sweetness" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Acidity"></label>
            <input asp-for="Acidity" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Tannin"></label>
            <input asp-for="Tannin" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Body.Name"></label>
            <input asp-for="Body.Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Wine.Name"></label>
            <input asp-for="Wine.Name" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Review" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
