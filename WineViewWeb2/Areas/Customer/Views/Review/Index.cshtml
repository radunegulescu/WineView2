@model IEnumerable<Review>

<div class="row pb-3">
    @foreach (var review in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-text h5 text-primary">@review.Text</p>
                            </div>
                            <br />
                            <div class="pl-1">
                                <p>Sweetness: <b>@review.Sweetness</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Acidity: <b>@review.Acidity</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Tannin: <b>@review.Tannin</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Body: <b>@review.Body.Name</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Wine: <b>@review.Wine.Name</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Upsert" class="btn btn-primary form-control" asp-route-wineId="@review.Wine.Id">
                            Edit Review
                        </a>
                        <a asp-action="Delete" class="btn btn-danger form-control" asp-route-id="@review.Id">
                            Delete Review
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>